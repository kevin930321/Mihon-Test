VALUES (:source, :url, :artist, :author, :description, :genre, :title, :status, :thumbnailUrl, :favorite, :lastUpdate, :nextUpdate, :initialized, :viewerFlags, :chapterFlags, :coverLastModified, :dateAdded, :updateStrategy, :calculateInterval, 0, :version);

-- FIX: 修正了整個 update 查詢，使其語法正確
update: (
    url TEXT,
    source INTEGER,
    favorite INTEGER,
    last_update INTEGER,
    next_update INTEGER,
    date_added INTEGER,
    viewer_flags INTEGER,
    chapter_flags INTEGER,
    cover_last_modified INTEGER,
    title TEXT,
    artist TEXT,
    author TEXT,
    description TEXT,
    genre TEXT,
    status INTEGER,
    thumbnail_url TEXT,
    update_strategy INTEGER,
    initialized INTEGER,
    -- 這裡是我們新增的自定義欄位參數
    customTitle TEXT,
    customAuthor TEXT,
    customArtist TEXT,
    customDescription TEXT,
    -- id 參數必須放在最後
    id INTEGER!
)
UPDATE mangas SET
    url = :url,
    source = :source,
    favorite = :favorite,
    last_update = :last_update,
    next_update = :next_update,
    date_added = :date_added,
    viewer = :viewer_flags, -- <-- 主要修正點：欄位名稱是 viewer
    chapter_flags = :chapter_flags,
    cover_last_modified = :cover_last_modified,
    title = :title,
    artist = :artist,
    author = :author,
    description = :description,
    genre = :genre,
    status = :status,
    thumbnail_url = :thumbnail_url,
    update_strategy = :update_strategy,
    initialized = :initialized,
    -- 這裡是我們新增的自定義欄位賦值
    custom_title = :customTitle,
    custom_author = :customAuthor,
    custom_artist = :customArtist,
    custom_description = :customDescription
WHERE _id = :id;

